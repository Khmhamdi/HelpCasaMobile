<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agence.ProfileClient"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titreprofutl"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/homePr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/home"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="ID User: "/>

        <TextView
            android:id="@+id/etIdClientPr"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <EditText
        android:id="@+id/etEmailPr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:enabled="false"/>

    <EditText
        android:id="@+id/etCivilitePr"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Civilité"
        android:inputType="text" />

    <EditText
        android:id="@+id/etNomPr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:inputType="text" />

    <EditText
        android:id="@+id/etPrenomPr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etRaisonSocialePr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raison Sociale"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etAdressePr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etVillePr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Ville"
        android:inputType="text" />

    <EditText
        android:id="@+id/etCpPr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Code Postal"
        android:inputType="number" />

    <EditText
        android:id="@+id/etTelMobilePr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Téléphone Mobile"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etTelFixPr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Téléphone Fixe"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnModCltPr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modifier"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btnValCltPr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valider"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btnAnnulCltPr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annuler"
            android:layout_margin="3dp"/>
    </LinearLayout>



</LinearLayout>