<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestion Logement"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idGl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Id Logement"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/etatGL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Etat"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="right"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/RBAppGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Appartement"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/RBVillaGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Villa"/>
            <RadioButton
                android:id="@+id/RBTrGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terrain"/>
            <RadioButton
                android:id="@+id/RBBurGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bureau"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">
            <RadioButton
                android:id="@+id/RBLCGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/RBVTGl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vente"/>

        </RadioGroup>

        <EditText
            android:id="@+id/etSuperficieGl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Sprfcie"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/etNbrChambreGl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Chbre"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etGouvernoratGl"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="Gouvernorat"/>

        <EditText
            android:id="@+id/etVilleGl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ville"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/etAdresseGl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse"/>


    <EditText
        android:id="@+id/etDescriptionGl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"/>

    <EditText
        android:id="@+id/etPrixGl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Prix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etDtAnnonceGl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Date de l'annonce" />

        <EditText
            android:id="@+id/etValiditeGl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Validité en jours"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/chkMeublGl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Meublé(e)"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etIdPropGl"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:hint="ID Client"
            android:layout_marginLeft="42dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextUrlGl"
                android:layout_width="200dp"
                android:layout_height="133dp"
                android:hint="Enter URL" />

            <Button
                android:id="@+id/buttonLoadGl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Image"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_viewGl"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:adjustViewBounds="true"
            android:contentDescription="Image preview"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnEnregistrerGl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Enregistrer"/>

        <Button
            android:id="@+id/btnSuppGl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Supprimer"/>

        <Button
            android:id="@+id/btnAnnulerGl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Annuler"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</LinearLayout>