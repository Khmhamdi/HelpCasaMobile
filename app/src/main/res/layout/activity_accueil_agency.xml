<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.PageAccueil"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Agence"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnAjtLgm"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Ajouter Logement"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnListLgm"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Liste Logements"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnAjtClt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Ajouter Client"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnLCAg"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/listClient"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnImmoRes"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Immobiliers réservés"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnListUser"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Gestion des utilisateurs"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>